pipeline {
    agent any

    environment {
        NETLIFY_SITE_ID = credentials('netlify-site-id')
        NETLIFY_AUTH_TOKEN = credentials('netlify-token')
    }

    stages {
        stage('Docker') {
            steps {
                dir('jenkins-v2/my-docker-files')
                {
                    sh 'docker build -t my-node18 .'
                }
            }
        }
        stage('Build') {
            agent {
                docker {
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            steps {
                dir('jenkins-v2/app')
                {
                    sh '''
                        ls -la
                        node --version
                        npm --version
                        npm ci
                        npm run build
                        ls -la
                    '''
                }
            }
        }
        stage('Run Test')
        {
            parallel {
                stage('Test 1') {
                    agent {
                        docker {
                            image 'node:18-alpine'
                            reuseNode true
                        }
                    }
                    steps {
                        echo "Test stage"
                        sh '''
                            ls -l
                            test -f jenkins-v2/app/.next/server/pages/index-v2.html
                        '''
                    }
                }
                stage('Test 2') {
                    agent {
                        docker {
                            image 'node:18-alpine'
                            reuseNode true
                        }
                    }
                    steps {
                        echo "Test stage"
                        sh '''
                            ls -l
                            cd jenkins-v2/app && npm test
                        '''
                    }
                }
            }
        }
        stage('Deploy to staging') {
                    agent {
                        docker {
                            image 'my-node18'
                            reuseNode true
                        }
                    }
                    steps {
                        dir('jenkins-v2/app')
                        {
                            sh '''
                                echo "Deploying to stage environment"
                                node_modules/.bin/netlify --version
                                node_modules/.bin/netlify status
                                node_modules/.bin/netlify deploy --dir=.next --json > deploy-output.json
                                node_modules/.bin/node-jq -r '.deploy_url' deploy-output.json
                            '''
                        }
                    }
        }
        stage ('Approval') {
            steps {
                timeout (time: 1, unit: 'MINUTES') {
                    input message: "Do you wish to deploy to production", ok: "Yes, I'm sure!"
                }
            }
        }
        stage('Deploy to production') {
                    agent {
                        docker {
                            image 'my-node18'
                            reuseNode true
                        }
                    }
                    steps {
                        dir('jenkins-v2/app')
                        {
                            sh '''
                                echo "Deploying to production environment"
                                node_modules/.bin/netlify --version
                                node_modules/.bin/netlify status
                                node_modules/.bin/netlify deploy --dir=.next --prod
                            '''
                        }
                    }
        }
    }
    post {
        always {
            junit 'jenkins-v2/app/reports/junit.xml'
        }
    }
}
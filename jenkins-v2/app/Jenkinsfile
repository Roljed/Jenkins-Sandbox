pipeline {
    agent any

    stages {
        stage('Build') {
            agent {
                docker {
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            steps {
                dir('jenkins-v2/app')
                {
                    sh '''
                        ls -la
                        node --version
                        npm --version
                        npm ci
                        npm run build
                        ls -la
                    '''
                }
            }
        }
        stage('Test') {
            steps {
                echo "Test stage"
                sh '''
                    if [ -f ./build/index.html ]; then
                        echo "index.html file exist"
                    else
                        echo "file does not exist"
                    fi
                '''
            }
        }
    }
}
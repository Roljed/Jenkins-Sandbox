pipeline {
    agent any

    environment {
        AWS_DEFAULT_REGION = "us-east-1"
    }

    stages {
        stage('Deploy to AWS') {
           agent {
                docker {
                    image 'amazon/aws-cli'
                    args "--entrypoint='' -v ${WORKSPACE}:/workspace"
                }
           }
           steps {
                withCredentials([usernamePassword(credentialsId: 'AWS_ACCESS_KEY_ID', passwordVariable: 'AWS_SECRET_ACCESS_KEY', usernameVariable: 'AWS_ACCESS_KEY_ID')]) {
                    sh '''
                        aws --version
                        aws s3 ls
                        cd /workspace
                        ls -l # Verify the file exists
                        aws ecs register-task-definition --cli-input-json file://task-definition-prod.json
                    '''
                }
           } 
        }
        stage('Build') {
            agent {
                docker {
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            steps {
                dir('jenkins-v2/app') {
                    sh '''
                        ls -la
                        node --version
                        npm --version
                        npm ci
                        npm run build
                        ls -la
                    '''
                }
            }
        }
    }
}
